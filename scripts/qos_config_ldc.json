{
  "monitoring": {
    "interval_seconds": 30,
    "health_check_interval": 60,
    "error_threshold": 3,
    "auto_restart_enabled": true,
    "notification_enabled": true,
    "database_check_interval": 120
  },
  "environments": {
    "ldc_staging": {
      "name": "LDC Construction Tools Staging",
      "base_url": "http://10.92.3.25:3000",
      "ssh_host": "ldc-staging",
      "service_name": "ldc-construction-staging",
      "priority": "medium",
      "endpoints": ["/api/health", "/", "/projects", "/materials", "/api/projects"],
      "log_files": [
        "/var/log/ldc-construction-staging/error.log",
        "/var/log/nginx/error.log",
        "/var/log/ldc-construction-staging/access.log"
      ]
    },
    "ldc_production": {
      "name": "LDC Construction Tools Production",
      "base_url": "http://10.92.3.26:3000",
      "ssh_host": "ldc-production",
      "service_name": "ldc-construction",
      "priority": "critical",
      "endpoints": ["/api/health", "/", "/projects", "/materials", "/api/projects"],
      "log_files": [
        "/var/log/ldc-construction/error.log",
        "/var/log/nginx/error.log",
        "/var/log/ldc-construction/access.log"
      ]
    },
    "postgresql": {
      "name": "PostgreSQL Database Server",
      "base_url": null,
      "ssh_host": "postgresql",
      "service_name": "postgresql",
      "priority": "critical",
      "database_checks": {
        "port": 5432,
        "databases": ["ldc_construction", "ldc_construction_staging"],
        "max_connections_threshold": 100,
        "slow_query_threshold": 5000
      },
      "log_files": [
        "/var/log/postgresql/postgresql-15-main.log"
      ]
    }
  },
  "ssh_config": {
    "config_file": "/Users/cory/Documents/Cloudy-Work/ssh_config_jw_attendant",
    "timeout": 10,
    "connection_attempts": 3
  },
  "checks": {
    "web_endpoints": {
      "timeout": 10,
      "expected_status": 200,
      "response_time_threshold": 3.0
    },
    "database": {
      "connection_timeout": 5,
      "query_timeout": 10,
      "health_queries": {
        "postgresql": "SELECT 1"
      }
    },
    "system_resources": {
      "cpu_threshold": 85,
      "memory_threshold": 80,
      "disk_threshold": 85
    },
    "log_analysis": {
      "error_patterns": ["error", "exception", "critical", "fatal", "500", "502", "503"],
      "warning_patterns": ["warning", "warn", "deprecated"],
      "max_recent_errors": 10
    }
  },
  "interventions": {
    "restart_service": {
      "enabled": true,
      "cooldown_minutes": 10,
      "max_attempts_per_hour": 3
    },
    "reload_nginx": {
      "enabled": true,
      "cooldown_minutes": 5,
      "max_attempts_per_hour": 6
    },
    "clear_cache": {
      "enabled": true,
      "cooldown_minutes": 15,
      "max_attempts_per_hour": 2
    },
    "database_maintenance": {
      "enabled": true,
      "vacuum_threshold": 1000000,
      "reindex_threshold": 5000000
    }
  },
  "notifications": {
    "critical_errors": {
      "enabled": true,
      "methods": ["log", "file"]
    },
    "intervention_success": {
      "enabled": true,
      "methods": ["log"]
    },
    "daily_summary": {
      "enabled": true,
      "time": "07:00"
    }
  },
  "reporting": {
    "metrics_retention_days": 30,
    "generate_daily_reports": true,
    "report_directory": "logs/reports"
  }
}
