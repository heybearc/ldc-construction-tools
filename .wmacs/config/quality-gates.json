{
  "gates": {
    "build": {
      "required": true,
      "timeout": 300,
      "failureAction": "abort",
      "command": "npm install"
    },
    "tests": {
      "required": true,
      "coverage": 80,
      "timeout": 120,
      "failureAction": "warn",
      "command": "npm test"
    },
    "security": {
      "required": false,
      "vulnerabilities": "none-high",
      "failureAction": "warn",
      "command": "npm audit --audit-level high"
    },
    "performance": {
      "required": false,
      "responseTime": 200,
      "failureAction": "warn"
    }
  },
  "deployment": {
    "stagingFirst": true,
    "requireHealthCheck": true,
    "rollbackOnFailure": true,
    "maxDeploymentTime": 600
  }
}
